generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  user
  admin
}

enum UserStatus {
  active
  inactive
  suspended
}

model User {
  id       String     @id @default(uuid()) @db.Uuid
  email    String     @unique
  password String
  name     String?
  role     UserRole   @default(user)
  status   UserStatus @default(active)
}
